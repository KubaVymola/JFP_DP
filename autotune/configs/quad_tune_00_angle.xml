<?xml version="1.1" encoding="UTF-8"?>

<autotune>
    <pass name="angle" end_time="40.0">
        <transition type="lti">
            <at_time> 15.0 </at_time>
            <to> 20.0 </to>
            <rate> 10.0 </rate>
        </transition>

        <transition type="lti">
            <at_time> 25.0 </at_time>
            <to> 0.0 </to>
            <rate> 10.0 </rate>
        </transition>

        <error>
            <type> quadratic </type>
            <parameter> fcs/theta-est </parameter>
        </error>

        <define> angle_sp_tune </define>
        
        P: 0.6 * 0.0007
        I: 1.2 * 0.0007 / 2.5
        D: 3   * 0.0007 * 2.5 / 40
        
        <parameter name="angle_pid_p">
            <min>  0.00001 </min>
            <max>  0.1 </max>
            <step> 0.000005 </step>
            <init> 0.000465 </init>
        </parameter>
        
        <parameter name="angle_pid_i">
            <min>  0.000001 </min>
            <max>  0.1 </max>
            <step> 0.0000005 </step>
            <init> 0.0000745 </init>
        </parameter>
    
        <parameter name="angle_pid_d">
            <min>  0.000001 </min>
            <max>  0.1 </max>
            <step> 0.0000005 </step>
            <init> 0.0001445 </init>
        </parameter>
    </pass>
</autotune>